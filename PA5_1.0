declare -A var   #declaring array var to use array of strings

var[name]=`zenity --entry --width=300 --title="Legit Reservation Program" --text="Enter Your Name"`		#Setting name into array
if [[ $? -eq 1 ]]			#Checking if entry was cancelled
then
   exit
fi

var[departure]=`zenity --list --title="Legit Reservation Program" --text="Enter Your Departure Location" --column="Cities" "New York City" "San Francisco" "Seattle" "Chicago" "Austin" "Boston"`
if [[ $? -eq 1 ]]
then
   exit
fi


var[destination]=`zenity --list --title="Legit Reservation Program" --text="Enter Your Destination Location" --column="Cities" "New York City" "San Francisco" "Seattle" "Chicago" "Austin" "Boston"`
if [[ $? -eq 1 ]]
then
   exit
fi

var[departuredate]=`zenity --calendar --title="Legit Reservation Program" --text="Enter Your Departure Date"`
if [[ $? -eq 1 ]]
then
   exit
fi

var[arrivaldate]=`zenity --calendar --title="Legit Reservation Program" --text="Enter Your Return Date"`
if [[ $? -eq 1 ]]
then
   exit
fi

var[bags]=`zenity --list --title="Legit Reservation Program" --text="How many bags are you bringing?" --column "Bags" "0" "1" "2" "3" "4"` 
if [[ $? -eq 1 ]]
then
   exit
fi


touch Reservations.txt
grep "^${var[name]}|" Reservations.txt
if [[ $? -ne 0 ]] #If the user's name isn't in the file yet
then
	echo "${var[name]}|${var[departure]}|${var[destination]}|${var[departuredate]}|${var[arrivaldate]}|${var[bags]}" >> Reservations.txt #Append flight information to the file
else #If user's name is already in file
	touch reservationsCopy.txt
	`zenity --info --width=400 --title="Legit Reservation Program" --text="You've already scheduled a flight, rescheduling old flight with new information..."`
	grep -v "^${var[name]}|" Reservations.txt > reservationsCopy.txt #Add the existing travel information (minus the users old info) to a buffer file, then copy that information back to the main file
	cat reservationsCopy.txt > Reservations.txt
	echo "${var[name]}|${var[departure]}|${var[destination]}|${var[departuredate]}|${var[arrivaldate]}|${var[bags]}" >> Reservations.txt #Append new info to the file
fi

`zenity --info --width=300 --title="Legit Reservation Program" --text="Name: ${var[name]}\nDeparture: ${var[departure]}\nDestination: ${var[destination]}\nDeparture Date: ${var[departuredate]}\nArrival Date: ${var[arrivaldate]}\nBags: ${var[bags]}"`
